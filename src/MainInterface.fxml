<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="MainInterface">
    <Label text="Masukkan Bahan-Bahan:"/>
    <TextField fx:id="ingredientsInput"/>
    <Button text="Cari Resep" onAction="#searchRecipes"/>
    <Label text="Hasil Pencarian:"/>
    <ListView fx:id="recipeList" onMouseClicked="#onRecipeSelect"/>
    <Button text="Simpan Resep" onAction="#saveRecipe"/>
    <Button text="Jadwalkan Resep" onAction="#scheduleRecipe"/>
    <Label text="Detail Resep:"/>
    <TextArea fx:id="recipeDetails"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/javafx"
      xmlns="http://javafx.com/javafx"
      fx:controller="Home">
    <Label text="Masukkan bahan untuk mencari resep:"/>
    <TextField fx:id="searchField" promptText="Contoh: ayam, bawang putih"/>
    <Button text="Cari Resep" onAction="#searchRecipes"/>
    <Label text="Hasil Pencarian:"/>
    <ListView fx:id="searchResults" prefHeight="200"/>
    <Label text="Detail Resep:"/>
    <TextArea fx:id="recipeDetails" editable="false" wrapText="true"/>
</VBox>
